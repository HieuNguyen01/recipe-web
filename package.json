{
  "name": "recipe-web",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Recipe API (Node/Express/MongoDB/JWT) and Recipe UI (React/Material Kit)",
  "workspaces": [
    "recipe-api",
    "recipe-ui"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "clean": "rimraf node_modules",
    "start:api": "npm run dev --workspace=recipe-api",
    "start:ui": "npm start --workspace=recipe-ui",
    "start": "concurrently \"npm run start:api\" \"npm run start:ui\"",
    "lint:api": "eslint \"recipe-api/**/*.js\"",
    "lint:ui": "npm run lint --workspace=recipe-ui",
    "lint": "npm run lint:api && npm run lint:ui",
    "test:api": "npm test --workspace=recipe-api",
    "test:ui": "npm test --workspace=recipe-ui",
    "test": "npm run test:api && npm run test:ui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HieuNguyen01/recipe-web.git"
  },
  "keywords": [
    "monorepo",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "react",
    "material-ui"
  ],
  "author": "HieuNguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HieuNguyen01/recipe-web/issues"
  },
  "homepage": "https://github.com/HieuNguyen01/recipe-web#readme",
  "devDependencies": {
    "concurrently": "^8.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0"
  }
}
